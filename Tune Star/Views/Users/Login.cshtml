@model Tune_Star.Models.LoginModel

@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="parent">
    <div class="div1">

        <div class="login-form">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Logon" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>
    <div class="div2"> <img src="@Url.Content("/staticImages/sideimgleft.png")" /> </div>
    <div class="div3"> <img src="@Url.Content("/staticImages/sideimgright.png")" /> </div>
</div>

<style>
    .parent {
        display: grid;
        grid-template-columns: repeat(9, 1fr);
        grid-template-rows: repeat(5, 1fr);
        grid-column-gap: 0px;
        grid-row-gap: 0px;
    }

    .div1 {
        grid-area: 1 / 3 / 6 / 8;
        background-color: red;
    }

    .div2 {
        grid-area: 1 / 1 / 6 / 3;
        background-color: black;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .div3 {
        grid-area: 1 / 8 / 6 / 10;
        background-color: black;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .div2 img,
        .div3 img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
</style>
