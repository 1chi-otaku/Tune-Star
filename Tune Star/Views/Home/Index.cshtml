@model IEnumerable<Tune_Star.BLL.DTO.SongDTO>

@{
    ViewData["Title"] = "Home Page";
}

<style>


    body{
        background-color: #181818;
        color: white;
        font-family: 'Urbanist', sans-serif;
    }
    .parent {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        grid-template-rows: 0.2fr 0.3fr 0.2fr repeat(3, 1fr);
        grid-column-gap: 0px;
        grid-row-gap: 0px;
    }

    .div1 {
        background-color: #181818;
        grid-area: 1 / 1 / 7 / 2;

    }

    .div2 {
        background-color: #181818;
        grid-area: 1 / 5 / 7 / 6;

    }

    .div3 {
        grid-area: 1 / 2 / 2 / 5;
        font-size: 48px;

    }

    .div4 {
       
        grid-area: 2 / 2 / 3 / 5;
        
    }

    .div5 {
        grid-area: 3 / 2 / 4 / 5;
        font-size: 48px;
        color: white;

    }

    .div6 {
        grid-area: 4 / 2 / 6 / 5;
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;

    }

    .div7 {
        grid-area: 6 / 2 / 7 / 5;
    }

    .music-card {
        width: calc(20%-38px);
        margin-right: 23px;
        margin-bottom: 16px;
        overflow: hidden;
        font-size: 10px;
    }

    .placeh {
            width: 165px;
            height: 165px;
        }

    .music-info {
    }

    .song-name, .artist-name {
        margin: 3px 0;
        font-weight: bold;
        white-space: nowrap; 
        text-overflow: ellipsis; 
        max-width: 120px;
    }


    .song-name {
        font-size: 11px;
    }

    .artist-name{
        color: #C2B0B0;
        font-weight: 460;
        font-size: 12px;
    }

    .urbanist-<uniquifier > {
        font-family: "Urbanist", sans-serif;
        font-optical-sizing: auto;
        font-weight: <weight>;
        font-style: normal;
    }

    .regcontainer {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%; 
    }

    button {
        background-color: transparent;
        border: 2px solid red;
        color: white;
        transition: border 0.3s ease;
    }


        button:hover {
            border: 2px solid transparent;
            border-image: linear-gradient(to right, red, orange, yellow, lime, blue, indigo, violet) 1;
        }

    input[type="text"] {
        background-color: red; 
        color: white;
        border: none; 
        border-radius: 0; 
        padding: 10px; 
    }

        input[type="text"]::placeholder {
            color: #C0C0C0; 
        }

        input[type="text"]:focus {
            background-color: #921A1A;
            outline: none;
            border: 2px solid transparent;
            border-image: linear-gradient(to right, red, orange, yellow, lime, blue, indigo, violet) 1;
            color: white;
            box-shadow: none;
        }

    input[type="text"] {
        transition: border-image 0.3s ease;
    }

    select {
        background-color: red;
        color: white;
        border: none;
        border-radius: 0;
        padding: 10px;
        appearance: none;
    }

        select option {
            color: white; 
        }

    

</style>



<div class="parent">
    <div class="div1"> </div>
    <div class="div2"> </div>
    <div class="div3"> <p>Listen & Download these tracks!</p></div>
    <div class="div4 d-flex align-items-center justify-content-center">

        <div class="d-flex align-items-center w-50">
            <input type="text" class="form-control w-100 me-2" placeholder="Search for song, artists, genre...">
            <select class="w-25" style="background-color: red; color: white; border: none; border-radius: 0; padding: 10px;">
                <option value="1">All</option>
                <option value="2">Pop</option>
                <option value="3">Rock</option>
            </select>
        </div>
        
    
    </div>
    <div class="div5">
       
    </div>
    <div class="div6"> 

        @foreach (var item in Model)
        {
            <div class="music-card">
                <img src="@item.Img" alt="Song Image">

                <div class="music-info">
                    <div class="song-name"> @item.Title </div>
                    <div class="artist-name"> @item.Artist</div>
                </div>
            </div>
        }
        

    </div>
    <div class="div7">
        <div class="regcontainer">
            <h2>Thanks for listening. Now join us.</h2>
            <p>Download and Upload music for free!</p>
            <button >Create Account</button>

        </div>
    
    </div>
</div>